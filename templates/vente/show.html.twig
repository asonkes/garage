{% extends 'base.html.twig' %}

{% block title %}Vente
{% endblock %}


{% block body %}
	<div class="container mt-4" id="container">
		<div class="row my-2">
			<div class="col-md-8">
				<h1 class="mt-2">
					<span>{{ voiture.marque }}</span>
					<span>{{ voiture.modele }}</span>
				</h1>
				<img id="image-voiture" class="img-fluid object-fit-cover" src="{{ voiture.cover }}">
			</div>
			<div class="col-md-4 py-2">
				<p class="mt-3">Nombre de kilométres :
					{{ voiture.km }}
				</p>
				<p class="mt-2">Prix :
					{{ voiture.price }}
					€</p>
				<p class="mt-2">Nombre de propriétaire antérieurs:
					{{ voiture.nbproprio }}
				</p>
				<p class="mt-2">Cylindree :
					{{ voiture.cylindree }}
				</p>
				<p class="mt-2">Puissance :
					{{ voiture.puissance }}
				</p>
				<p class="mt-2">Carburant :
					{{ voiture.carburant }}
				</p>
				<p class="mt-2">Date de mise en circulation :
					{{ voiture.date.format('d-m-Y') }}
				</p>
				<p class="mt-2">Transmission :
					{{ voiture.transmission }}
				</p>
				<p class="mt-2">Texte :
					{{ voiture.texte }}
				</p>

				<div>
					<a class="btn btn-primary mt-2" href="{{ path('edit', {'id':voiture.id} )}}" role=" button">Modification de l'annonce</a>
				</div>
			</div>
		</div>
		<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
			<div class="carousel-indicators" id="carousel-indicators">
				{% for image in voiture.getImages() %}
					<li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="{{ loop.index0 }}" {% if loop.first %} class="active" {% endif %}></li>
				{% endfor %}
			</div>
			<div class="carousel-inner">
				{% for image in voiture.getImages() %}
					<div class="carousel-item{% if loop.first %} active{% endif %}">
						<img id="image-voiture2" src="{{ image.Url }}" alt="">
					</div>
				{% endfor %}
			</div>
			<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Previous</span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Next</span>
			</button>
		</div>
	</div>
{% endblock %}
