{% extends 'base.html.twig' %}

{% block title %}Vente
{% endblock %}


{% block body %}
	<div class="container mt-5">
		<div class="row">
			<div class="col-sm-8">
				<h1 class="mt-2">
					<span>{{ voiture.marque }}</span>
					<span>{{ voiture.modele }}</span>
				</h1>
				<img id="image-voiture" class="img-fluid" src="{{ voiture.cover }}">
			</div>
			<div class="col-sm-4 mt-5">
				<p class="mt-3">Nombre de kilométres :
					{{ voiture.km }}
				</p>
				<p class="mt-2">Prix :
					{{ voiture.price }}
					€</p>
				<p class="mt-2">Nombre de propriétaire antérieurs:
					{{ voiture.nbproprio }}
				</p>
				<p class="mt-2">Cylindree :
					{{ voiture.cylindree }}
				</p>
				<p class="mt-2">Puissance :
					{{ voiture.puissance }}
				</p>
				<p class="mt-2">Carburant :
					{{ voiture.carburant }}
				</p>
				<p class="mt-2">Date de mise en circulation :
					{{ voiture.date.format('d-m-Y') }}
				</p>
				<p class="mt-2">Transmission :
					{{ voiture.transmission }}
				</p>
				<p class="mt-2">Texte :
					{{ voiture.texte }}
				</p>
				<div>
					<a class="btn btn-primary mt-2" href="#" role="button">Réserver</a>
				</div>

				<div>
					<a class="btn btn-primary mt-2" href="#" {#{{ path('edit', {'id':voiture.id} )}}#}" role=" button">Modification de l'annonce</a>
				</div>

				<div>
					<a class="btn btn-primary mt-2" href="#" role="button">Supprimer l'annonce</a>
				</div>
			</div>

			<!-- Carrousel d'images indépendantes -->

			<div id="carouselExampleIndicators" class="carousel slide carousel-fade carousel-news-actus col-sm-8 mt-5" data-bs-ride="carousel">
				<ol class="carousel-indicators" id="carousel-indicators">
					{% for image in voiture.getImages() %}
						<li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="{{ loop.index0 }}" {% if loop.first %} class="active" {% endif %}></li>
					{% endfor %}
				</ol>
				<div class="carousel-inner">
					{% for image in voiture.getImages() %}
						<div class="carousel-item{% if loop.first %}active{% endif %}">
							<img id="image-voiture2" src="{{ image.Url }}" alt="">
						</div>
					{% endfor %}
				</div>
				<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-bs-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Previous</span>
				</a>
				<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-bs-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Next</span>
				</a>
			</div>
		</div>


	{% endblock %}
